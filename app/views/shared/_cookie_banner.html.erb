<%= turbo_frame_tag "cookie_consent_banner" do %>
  <% if session[:cookie_consent].nil? %>
    <section class="fixed bottom-0 left-0 right-0 p-4 bg-base-100 shadow-md border-t border-gray-200 pt-6 pb-6">
      <div class="w-full max-w-screen-xl xl:px-8 container mx-auto flex flex-col md:flex-row justify-between items-center">
        <div class="space-y-4 pr-0 md:pr-6">
          <h3>
            This site will always use a session cookie that provides basic functionality to the site.
            There are no advertising or tracking cookies.
          </h3>
          <p>
            You can reset your choice at any time on the tracking information page.
          </p>
          <%= link_to "Learn more", tracking_info_path, class: "mt-4", target: "_top" %>
        </div>
        <div class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-4">
          <%= button_to "Accept cookies", cookie_consent_path(cookies: true), class: "btn btn-primary mt-2 md:mt-0", method: :post %>
          <%= button_to "Reject cookies", cookie_consent_path(cookies: false), class: "btn mt-2 md:mt-0", method: :post %>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
