<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if !@portfolio_item %>
      <p>Portfolio item not found</p>
    <% else %>
      <%= render @portfolio_item %>

    <div class="flex flex-col xs:flex-row mt-8 items-center gap-y-2 xs:gap-x-2 sm:w-4/5">
      <% if authenticated? && Current.session.user.id == @portfolio_item.portfolio.user.id %>
          <%= link_to "Edit portfolio item", edit_portfolio_item_path(@portfolio_item), class: "btn btn-primary link-button w-full xs:w-1/2" %>
        <% end %>
        <%= link_to "Back to portfolio", portfolio_path(@portfolio_item.portfolio), class: "btn btn-secondary link-button w-full xs:w-1/2" %>
      </div>
    <% end %>
  </div>
</div>