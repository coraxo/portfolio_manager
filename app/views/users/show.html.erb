<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if !@user.portfolio %>
      <p>User portfolio not found</p>
      <% if authenticated? && Current.session.user.id == @user.id %>
        <%= link_to "Create portfolio settings", new_portfolio_path %>
      <% end %>
    <% else %>
      <%= render @user %>

      <% if authenticated? && Current.session.user.id == @user.id %>
        <%= link_to "Edit user settings", edit_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <% end %>
    <% end %>
  </div>
</div>