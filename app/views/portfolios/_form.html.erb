<%= form_with(model: portfolio, class: "contents") do |form| %>
  <% if portfolio.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited portfolio data from being saved:</h2>

      <ul>
        <% portfolio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-full sm:w-4/5">
    <%= form.text_field :title, required: true, autofocus: true, autocomplete: "title", placeholder: "Title for portfolio", value: portfolio.title || params[:title], class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-6 w-full" %>
  </div>

  <div class="w-full sm:w-4/5">
    <%= form.text_area :introduction, required: true, autofocus: true, placeholder: "Short introduction for portfolio", value: portfolio.introduction || params[:introduction], class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="w-full sm:w-4/5">
    <%= form.text_area :description, required: true, autofocus: true, placeholder: "Full description for portfolio", value: portfolio.description || params[:descrpition], class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="flex flex-col xs:flex-row mt-6 items-center w-full">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer justify-self-center w-full" %>
    <%= link_to "Back to front page", root_path, class: "xs:ml-2 rounded-lg py-3 px-5 max-xs:mt-2 text-center w-full bg-gray-100 font-medium" %>
  </div>
<% end %>
